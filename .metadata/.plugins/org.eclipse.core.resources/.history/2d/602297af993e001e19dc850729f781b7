package Exercicios_fixação;

import java.util.Scanner;

public class Exercício05 {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner (System.in);
		/*
		 * Fazer um programa para ler o código de uma peça 1,
		 *  o número de peças 1, o valor unitário de cada peça 1,
		 *   o código de uma peça 2, 
		 *   o número de peças 2 e o valor unitário de cada peça 2.
		 *    Calcule e mostre o valor a ser pago. 
		 */
		int codP1, numP1, codP2, numP2;
		double valorUniP1 , valorUniP2, valor;
		
		valorUniP1=sc.nextDouble();
		valorUniP2=sc.nextDouble();
		
		numP1=sc.nextInt();
		numP2=sc.nextInt();
		
		codP1=sc.nextInt();
		codP2=sc.nextInt();
		
		valor = numP1 * valorUniP1 + numP2 * valorUniP2;
		
		System.out.printf("VALOR A PAGAR: %.2f%n", valor);

		/*int cod1, cod2, qte1, qte2;
	    double preco1, preco2, total;

	    cod1 = sc.nextInt();
	    qte1 = sc.nextInt();
	    preco1 = sc.nextDouble();
	    
	    cod2 = sc.nextInt();
	    qte2 = sc.nextInt();
	    preco2 = sc.nextDouble();

	    total = preco1 * qte1 + preco2 * qte2;

	    System.out.printf("VALOR A PAGAR: R$ %.2f%n", total);*/
		
		
		sc.close();
	}

}
